@model IEnumerable<CustomerCareMVC.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Operators</h2>

<p>
    <div>
        <a href="@Url.Action("Create","User")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>
            Add Product
        </a>
    </div>
</p>
<table class="table table-bordered table-condensed well">
    <tr class="list">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
        <th>Edit</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            <a href="@Url.Action("Edit","User", new {id = item.Id })" class="btn btn-success">
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            </a>
        </td>

        <td>
            <a href="@Url.Action("Details","User", new {id = item.Id })" class="btn btn-success">
                <span class="glyphicon glyphicon-ban-circle"></span>
                Details
            </a>
        </td>

        <td>
            <a href="@Url.Action("Delete","User", new {id = item.Id })" class="btn btn-success">
                <span class="glyphicon glyphicon-trash"></span>
                Delete
            </a>
        </td>
    </tr>
}

</table>
